if [[ $(cat /etc/redhat-release 2>/dev/null) =~ Red ]]; then redhat=1; fi

if [[ $redhat ]]
then
  out=$(rpm -qa|grep cxlflash)
else
  out=$(dpkg -l|grep cxlflash)
fi

if [[ ${out} =~ cxlflash ]]
then
  echo "  ERROR: uninstall the existing cxlflash* pkgs first"
  exit 0
fi

dest=/opt/ibm/capikv

mkdir -p $dest/bin
mkdir -p $dest/lib
mkdir -p $dest/etc
mkdir -p $dest/afu
mkdir -p $dest/test

cp -R $1/pkg/install_root/opt/ibm/capikv/* $dest
cp -R $1/pkg/afu_root/opt/ibm/capikv/*     $dest
cp -R $1/pkg/test_root/opt/ibm/capikv/*    $dest

$1/src/build/install/resources/postafuinstall

touch $dest/etc/sioluntable.ini

exit 0
