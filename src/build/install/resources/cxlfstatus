CAPIKV=/usr/bin
source $CAPIKV/cflashutils

showhelp()
{
    echo "Usage: $(basename $0)"
    echo "    Print LUN modes for all cxlflash devices."
}

#show help if we haven't gotten a correct # of args
if [ "$#" -ne 0 ]; then
    showhelp;
    exit $EINVAL;
fi

printstatus;
