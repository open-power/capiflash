if [[ ! $PWD =~ surelock-sw && -z $SURELOCKROOT ]]; then echo "source env.bash"; exit 0; fi
source env.bash >/dev/null 2>&1

BDIR=${SURELOCKROOT%/*}/build

sed -i 's/#override_dh_fixperms/override_dh_fixperms/'     src/build/debian/rules
sed -i 's/#override_dh_md5sums/override_dh_md5sums/'       src/build/debian/rules
sed -i 's/#override_dh_makeshlibs/override_dh_makeshlibs/' src/build/debian/rules

if [[ -e ${BDIR} ]]; then
  echo "<enter> to remove: ${BDIR}, q to quit"
  read char
  if [[ $char = [qQ] ]]; then exit 0; fi
  sudo rm -fR ${BDIR}
fi

${SURELOCKROOT}/src/build/tools/create_tarball

if [[ ! -e ${BDIR} ]]; then echo "no build dir found"; exit 0; fi

cd ${BDIR}
tar -xzf *.gz
cd ${BDIR}/cxlflash_*
debuild -uc -us
if [[ $? -ne 0 ]]; then echo "debuild failed"; exit -1; fi

echo "<enter> to build source, q to quit"
read char
if [[ $char = [qQ] ]]; then exit 0; fi

debuild -S -sa
if [[ $? -ne 0 ]]; then echo "debuild -S -sa failed"; exit -1; fi

exit 0
